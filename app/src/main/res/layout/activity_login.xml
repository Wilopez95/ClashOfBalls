<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wilop.clashofballs.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#AA2929"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#E8CA73"
            android:textColorHint="#E8CA73" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#AA2929"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#E8CA73"
            android:textColorHint="#E8CA73" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="#E8CA73"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:text="Registrarse" />

        <ImageButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/button_login" />

        <TextView
            android:id="@+id/txt_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="#E8CA73"
            android:textSize="18sp"
            tools:text="Registrarse" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
