<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wilop.clashofballs.Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/r_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#AA2929"
            android:textColorHint="#E8CA73"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#E8CA73" />

        <EditText
            android:id="@+id/r_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#AA2929"
            android:textColorHint="#E8CA73"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#E8CA73" />

        <EditText
            android:id="@+id/r_contrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#AA2929"
            android:textColorHint="#E8CA73"
            android:ems="10"
            android:hint="Contrase単a"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#E8CA73" />

        <EditText
            android:id="@+id/r_contrase単a_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#AA2929"
            android:textColorHint="#E8CA73"
            android:ems="10"
            android:hint="Confirmar contrase単a"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#E8CA73" />

        <TextView
            android:id="@+id/texto_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E8CA73"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:text="TextView" />

        <ImageButton
            android:id="@+id/registro"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/button_register" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
